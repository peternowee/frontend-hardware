{{page-title "Transactions"}}

<ul>
  {{#each @model as |transaction|}}
    <li>
      {{transaction.datetime}}<br />
      {{transaction.person}}<br />
      {{transaction.individualProduct}}<br />
      <small>{{transaction.id}}</small>
      <button type="button" {{on "click" (fn this.removeTransaction transaction)}}>Remove</button>
    </li>
  {{/each}}
</ul>

<hr />
<form {{on "submit" this.createTransaction}} >
  <dl>
    <dt>Datetime</dt>
    <dd>
       <Input @value={{this.newDatetime}}
              placeholder="20230101T0000Z" />
    </dd>
    <dt>Person ID</dt>
    <dd>
       <Input @value={{this.newPerson}}
              placeholder="64A68A6AB3020C92BA8D9DE4" />
    </dd>
    <dt>Individual Product ID</dt>
    <dd>
       <Input @value={{this.newIndividualProduct}}
              placeholder="64A6DB1A5C9291BE71355640" />
    </dd>
  </dl>
  <button type="submit">Create</button>
</form>

{{outlet}}