{{page-title "People"}}

<p>Hello from people.hbs</p>

<ul>
  {{#each @model as |person|}}
    <li>
      {{person.name}}<small>{{person.name}}</small>
      <button type="button" {{on "click" (fn this.removePerson person)}}>Remove</button>
    </li>
  {{/each}}
</ul>

<hr />
<form {{on "submit" this.createPerson}} >
  <dl>
    <dt>Person name</dt>
    <dd>
       <Input @value={{this.newName}}
              placeholder="Grace" />
    </dd>
  </dl>
  <button type="submit">Create</button>
</form>

{{outlet}}